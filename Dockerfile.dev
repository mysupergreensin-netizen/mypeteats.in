# Development Dockerfile with hot reload
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev)
# Use npm install instead of npm ci to avoid lockfile sync issues during development
RUN npm install

# Expose port
EXPOSE 9000

# Default command (overridden in docker-compose.dev.yml)
CMD ["npm", "run", "dev"]

